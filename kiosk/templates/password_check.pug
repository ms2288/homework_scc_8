      }
      .btn{
      position: center;
      margin : 0 auto;
      border-radius:5px;
      width: 32%;
      height: 90%;
      font-size: 50px;
      background-color: darkgrey;
      vertical-align: middle;
      }
      .row{
      padding-left: 30px;
      width: 100%;
      height:27%;
      }
      .bottom_button{
      position: center;
      margin : 0 auto;
      padding-top: 20px;
      border-radius:5px;
      position: center;
      width: 49%;
      font-size: 25px;
      background-color: darkgrey;
      text-align: center;
      }
      #cancle{
      background-color:red;
      color: white;
      }
      #okay{
      background-color: blue;
      color: white;
      }
