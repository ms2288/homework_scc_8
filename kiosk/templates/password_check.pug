doctype html
html(lang="ko")
  head
    style.
      #wrapper{
      width: 525px;
      height: 654px;
      margin: 0px auto;
      border: 3px solid gray;
      }
      #top{
      width: 525px;
      height: 10%;
      background-color:grey;
      text-align: center;
      line-height: 2.3;
      color: white;
      font-size: 30px;
      }
      #num{
      width: 525px;
      height: 15%;
      }
      #Buttons{
      width: 525px;
      height: 65%;
      }
      #bottom{
      width: 525px;
      height: 15%;
      }
      #insert_num{
      width: 88%;
      height: 96%;
      margin: 0 auto;
      border-bottom: 3px solid blue;
      font-size: 75px;
      text-align: center;
      }
      .row{
      margin:0 auto;
      width: 90%;
      height:90%;
      }
      .buttons_wrapper{
      width: 94%;
      height: 95%;
